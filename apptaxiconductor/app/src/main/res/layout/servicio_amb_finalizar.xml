<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/divider"
            android:id="@+id/linearLayout1"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_taxi_header"
                android:id="@+id/img_logo"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_text"
                android:text="FIN SERVICIO - AMBULATORIO"
                android:textStyle="bold"
                android:textSize="16dp"
                android:id="@+id/txt_usuario"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout2"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_primary_light_border_10"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:padding="20dp"
                >

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_precio"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primary_dark"
                    android:textSize="20dp"
                    android:backgroundTint="@color/primary"

                    android:textColorHint="@color/primary"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_distancia"
                    android:textColor="@color/accent"
                    android:textSize="12dp"
                    android:text="0 km recorrido"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txt_precio"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_finalizar"
                    android:text="COBRAR Y FINALIZAR"
                    android:textColor="@color/blanco"
                    android:layout_marginTop="25dp"
                    android:layout_centerHorizontal="true"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/shape_primary_border_5"
                    android:textSize="12dp"
                    android:layout_below="@+id/txt_distancia"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/soles"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>