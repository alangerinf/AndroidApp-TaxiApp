<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/divider"
            android:id="@+id/linearLayout1"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_taxi_header"
                android:id="@+id/img_logo"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_text"
                android:text="SERVICIO APP"
                android:textStyle="bold"
                android:textSize="22dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout2"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_primary_light_border_10"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:padding="20dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_cliente"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/primary"
                    android:text="ALAN GERONIMO"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_direccion"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/txt_cliente"
                    android:textColor="@color/primary_dark"
                    android:text="DIRECCIÓN\nAv. Fátima"
                    android:textSize="16dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/servicio_app"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_aceptar"
            android:text="ACEPTAR SERVICIO"
            android:textColor="@color/primary_text"
            android:padding="20dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_primary_border_5"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rechazar"
            android:text="RECHAZAR"
            android:textColor="@color/primary_dark"
            android:padding="20dp"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_secondary_border_10"
            />

    </LinearLayout>

</RelativeLayout>