<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnnewtaxi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO NEW TAKCI"

        android:visibility="invisible" />

    <Button
        android:id="@+id/btnviptaxi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO VIP TAXI"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnpiura"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRO PIURA REMISSE"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Enter Phone Number : "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextPhoneNo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:phoneNumber="true"
        android:visibility="visible"></EditText>

    <TextView
        android:id="@+id/textViewSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter SMS Message : "
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextSMS"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etxt_token"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textSize="12dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="enviar"
        android:visibility="visible" />



</LinearLayout>