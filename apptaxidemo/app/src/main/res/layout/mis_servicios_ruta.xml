<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/divider"
            android:id="@+id/linearLayout1"
            android:padding="9dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_cliente"
                android:layout_centerHorizontal="true"
                android:id="@+id/img_logo"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/linearLayout1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_light"
                android:id="@+id/relativeLayout1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    >
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/img_foto_conductor"
                        android:scaleType="fitXY"
                        android:padding="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/llyt_conductor"
                        >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="CONDUCTOR:"
                            android:textSize="12dp"
                            android:textColor="@color/primary_text"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/primary_text"
                            android:paddingTop="5dp"
                            android:textSize="12dp"
                            android:paddingLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txt_conductor"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/llyt_vehiculo"
                        android:layout_below="@id/llyt_conductor"
                        >

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:text="VEHICULO:"
                            android:textSize="12dp"
                            android:textColor="@color/primary_text"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/primary_text"
                            android:paddingTop="5dp"
                            android:textSize="12dp"
                            android:paddingLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txt_marca"
                            />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/map"
                tools:context=".atv_home"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>