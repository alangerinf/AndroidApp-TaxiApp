<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider_light"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llyt_principal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            >

            <RelativeLayout
                android:layout_width="26dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/marker_blanco_direcciones"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:id="@+id/imageView1"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_light"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llyt_texto"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="DIRECCIÓN:"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/negro"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_direccion"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="TextView"
                        android:textColor="@color/negro"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llyt_texto"
                    android:id="@+id/llyt_urba"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="NÚMERO:"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/negro"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_urba"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="TextView"
                        android:textColor="@color/negro"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llyt_urba"
                    android:id="@+id/llyt_refe"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="REFERENCIA:"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/negro"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/txt_refe"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="TextView"
                        android:textColor="@color/negro"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="hola"
            android:id="@+id/txt_id"
            android:visibility="invisible"
            />

    </RelativeLayout>
</RelativeLayout>
